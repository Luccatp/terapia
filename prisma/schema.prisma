datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String     @id @default(cuid())
  fullName  String
  email     String     @unique
  password  String
  verified  Boolean    @default(false)
  image     String
  birthday  DateTime
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Therapist Therapist?
}

model Therapist {
  id            String         @id
  expertise     String[]
  daysAvailable String[]
  description   String
  price         String
  Clinic        Clinic?        @relation(fields: [clinicId], references: [id])
  User          User           @relation(fields: [id], references: [id])
  clinicId      String?
  Psychologist  Psychologist[]
  Psychiatrist  Psychiatrist[]
}

model Psychologist {
  id        String    @id
  CRP       String
  Therapist Therapist @relation(fields: [id], references: [id])
}

model Psychiatrist {
  id        String    @id
  CRM       String
  Therapist Therapist @relation(fields: [id], references: [id])
}

model Clinic {
  id           String      @id @default(cuid())
  zipCode      String
  state        String
  city         String
  street       String
  number       String
  neighborhood String
  floorNumber  String      @default("building")
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  Therapist    Therapist[]
}
